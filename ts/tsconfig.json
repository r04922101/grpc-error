{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./lib/",
    "module": "commonjs",
    "lib": ["ES2017"],
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strict": false,
    "sourceMap": false,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
